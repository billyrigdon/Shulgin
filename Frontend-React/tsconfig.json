{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"jsx": "react",
		"outDir": "./dist",
		"rootDir": "./",
		"paths": {
			"Types": ["src/Types/*"],
			"Components": ["src/Components/*"],
			"Redux": ["src/Redux/*"],
			"Auth": ["src/Auth/*"]
		},
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"typeRoots": ["node_modules/@types", "src/Types"],
		"esModuleInterop": true,
		"lib": ["dom"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
